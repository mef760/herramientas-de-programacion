@using Clase6.ViewModels;
@model MenuViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Menu">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilter" />
        </div>
        <button class="btn" type="submit">Buscar</button>
    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Menus[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menus[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menus[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menus[0].IsVegetarian)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Menus[0].Calories)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Menus) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsVegetarian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Calories)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
